<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:id="@+id/ly_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_channel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_menu_home"
            android:gravity="center"
            android:padding="5dp"
            android:text="首页"
            android:textColor="@drawable/main_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_menu_welfare"
            android:gravity="center"
            android:padding="5dp"
            android:text="公益"
            android:textColor="@drawable/main_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_better"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_menu_community"
            android:gravity="center"
            android:padding="5dp"
            android:text="社区"
            android:textColor="@drawable/main_menu_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/main_menu_user"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            android:textColor="@drawable/main_menu_text"
            android:textSize="16sp"/>

    </LinearLayout>
</LinearLayout>