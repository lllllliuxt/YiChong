<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdoptPetActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <Button
            android:id="@+id/abopt_pet_return_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/returnbutton" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/verticalline" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收养萌宠"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:layout_weight="1"
                android:gravity="center"
                android:text="请选择上传的图片"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:gravity="center"
                android:text="（友情提示:图片最多可添加9张,点击可删除选择的图片）"
                android:textSize="30px"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="225dp" >
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:columnWidth="9dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
        </LinearLayout>
        <Button
            android:id="@+id/upload_photo_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="上传图片"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:background="@android:color/white"/>
        <EditText
            android:id="@+id/adopt_pet_text"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="#fff"
            android:gravity="start"
            android:hint="向大家介绍你的萌宠吧…"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Button
            android:id="@+id/advice_confirm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:text="发布"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="@android:color/holo_blue_bright"/>
    </LinearLayout>
    </ScrollView>


</LinearLayout>